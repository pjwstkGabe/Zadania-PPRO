#include <iostream>

using namespace std;

int main()
{
    int numb;
    
    cout << "Wpisz liczbe calkowita: ";
    cin >> numb;
    cout << endl;
    
    if (numb == 0) {
        cout << "liczba 0"<< endl;
        return 0;
    }
    
    if (numb % 2 == 0) {
        cout << "Wpisales liczbe pazysta" << endl;
        return 0;
    }
    
    else {
        cout << "Wpisales liczbe niepazysta"<< endl;
    }
    
    return 0;
}
