#include <iostream>
using namespace std;

int main()
{
    int x = 0; //liczba powtozen
    int wynik = 0;
    int z = 0;

    cout << "Podaj liczbe : ";
    cin >> x;

    for (int i = 0; i < x; i++) {

        wynik = wynik + 1;
        z += wynik;
        cout << "Powtozenie: " << wynik << endl;
       

    }
    cout << "Dodane wszystkie liczby szeregu: " << z;
}
