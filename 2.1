#include <iostream>
using namespace std;

int main()
{
    int n = 0; //liczba powtozen
    int wynik = 0;
    int suma = 0;
    
    

    cout << "Podaj liczbe n : ";
    cin >> n;

    for (int i = 1; i <= n; i++) {
        
        wynik += i;
        suma = suma + wynik;
        
        for (int j = 1; j <= i; j++) {
            
            cout << j;
            
            if (j < i){
                cout << " + ";
            }    
        }
        
        cout << " = "<< wynik << endl;
        
    }
        
    
    cout << "Suma szeregu: " << suma;
}
